{{#if mensajes }}
<style>
    .avatar {
        vertical-align: middle;
        width: 50px;
        height: 50px;
        border-radius: 50%;
    }
</style>
<div class="table-responsive">
    <table>
        {{#each (reverse mensajes) }}
        <tr>
            <td>
                <b style="color:blue">{{this.mail}}</b> 
                [<span style="color:brown">{{ formatDate this.timestamp }}</span>]:
                <i style="color:green">{{this.text}}</i>
                <img src="{{this.avatar}}" alt="Avatar" class="avatar">
            </td>
        </tr>
        {{/each}}
    </table>
</div>
{{ else }}
<h3 class="alert alert-warning">No hay mensajes</h1>
{{/if}}
<br>