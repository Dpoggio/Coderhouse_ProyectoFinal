<form action="javascript:guardarProducto(this)">

    
    <div class="form-group">
        <label for="id"><i><b>ID</b></i></label>
        <input id="id" readonly class="form-control" type="text" name="id" value="{{producto.id}}"/>
    </div>

    <div class="form-group">
        <label for="_name"><i><b>Nombre</b></i></label>
        <input id="_name" class="form-control" type="text" name="_name" value="{{producto.name}}" required/>
    </div>

    <div class="form-group">
        <label for="description"><i><b>Descripcion</b></i></label>
        <input id="description" class="form-control" type="text" name="description" value="{{producto.description}}" required/>
    </div>

    <div class="form-group">
        <label for="code"><i><b>Codigo</b></i></label>
        <input id="code" class="form-control" type="number" name="code" value="{{producto.code}}" required/>
    </div>

    <div class="form-group">
        <label for="price"><i><b>Precio</b></i></label>
        <input id="price" class="form-control" type="number" step=any name="price" value="{{producto.price}}" required/>
    </div>

    <div class="form-group">
        <label for="stock"><i><b>Stock</b></i></label>
        <input id="stock" class="form-control" type="number" name="stock" value="{{producto.stock}}" required/>
    </div>

    <div class="form-group">
        <label for="thumbnail"><i><b>Foto URL</b></i></label>
        <input id="thumbnail" class="form-control" type="text" name="thumbnail" value="{{producto.thumbnail}}" required/>
    </div>

    <input type="submit" class="btn btn-success mt-3 mb-5" value="Enviar">
    <button type="reset" onclick="cargarEditor()" class="btn btn-danger mt-3 mb-5">Limpiar</button>
</form>