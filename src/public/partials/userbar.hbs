<style>
    .avatar {
        vertical-align: middle;
        width: 50px;
        height: 50px;
        border-radius: 50%;
    }
</style>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    {{#if nombre }}
        <span class="navbar-brand">   
            <img src="{{ avatar }}" alt="Avatar" class="avatar">
            Bienvenido {{ nombre }}!
        </span>
        
        
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto"></ul>
            <a class="btn btn-outline-success my-2 my-sm-0" href="/ordenes.html">Ver mi Ordenes</a>
            <a class="btn btn-outline-warning my-2 my-sm-0" onclick="logout()">Desconectarse</a>
        </div>
    {{ else }}
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto"></ul>
            <a class="btn btn-outline-success my-2 my-sm-0" href="/login.html">Iniciar Sesion</a>
        </div>
    {{/if}}
</nav>
